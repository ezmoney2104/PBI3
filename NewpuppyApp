        <td>{{ owner.contact }}</td>
        <td>{{ owner.address }}</td>
        <td>
          <button @click="deleteOwner(owner.id)">Delete</button>
        </td>
      </tr>
    </tbody>
  </table>
</template>

<script>
import { FetchAPI } from "@/api/FetchAPI";

